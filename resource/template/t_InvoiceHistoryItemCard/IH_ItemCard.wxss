.itemCard {
    width: 100%;
    height: 174rpx;
    background: #fff;
    overflow: hidden;
    border-radius: 8rpx;
}

.leftStatus0, .leftStatus1, .leftStatus2 {
    position: absolute;
    width: 8rpx;
    height: 174rpx;
    top: 0;
    left: 0;
}

.leftStatus0 {
    background-color: #30bf7a;
}

.leftStatus1 {
    background-color: #ff7140;
}

.leftStatus2 {
    background-color: #ccc;
}

.rightStatus {
    position: absolute;
    border-left: 2rpx dashed #d8d8d8;
    width: 189rpx;
    height: 132rpx;
    right: 0;
    top: 50%;
    margin-top: -66rpx;
    background-position: center;
    background-size: 140rpx 112rpx;
    background-repeat: no-repeat;
}

.choiceCircle {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: none;
    left: 36rpx;
    top: 50%;
    margin-top: -20rpx;
    background-position: center;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    box-shadow:0px 0px 0px 1px #CECECE inset;

}

.mid-part {
    position: absolute;
    left: 30rpx;
    top: 0;
    width: 457rpx;
    height: 174rpx;
    background-color: #fff;
}

.mid-title, .mid-data, .mid-price {
    position: absolute;
    width: 100%;
    left: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.mid-title {
    height: 42rpx;
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #333;
    letter-spacing: 0.36rpx;
    top: 20rpx;
}

.mid-data {
    height: 34rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666;
    letter-spacing: 0.28rpx;
    top: 78rpx;
}

.mid-price {
    height: 34rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666;
    letter-spacing: 0.28rpx;
    top: 120rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.inptType {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #009dff;
    letter-spacing: 0.24rpx;
}
