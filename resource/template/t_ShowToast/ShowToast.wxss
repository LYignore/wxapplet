.bigCover {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.8);
}

.loading {
    position: absolute;
    width: 160rpx;
    height: 160rpx;
    top: 50%;
    left: 50%;
    margin-left: -80rpx;
    margin-top: -160rpx;
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #009dff;
    letter-spacing: 0.28rpx;
    text-align: center;
    line-height: 280rpx;
    overflow: hidden;
    background-position: center 16rpx;
    background-size: 100rpx 100rpx;
    background-repeat: no-repeat;
}
