@keyframes zoomOut{
  0% {
      -webkit-transform: scale3d(2,2,2);
      transform: scale3d(2,2,2);
      opacity: 0;
  }
  2% {
      opacity: 1;
  }
  100% {
      -webkit-transform: scaleX(1);
      transform: scaleX(1);
  }
}