.container {
    padding: 0;
    margin: 0;
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fff;
    background-size: 100% 100%;
    background-position: center 100%;
    background-repeat: no-repeat;
    overflow: hidden;
}

.camera {
    position: absolute;
    width: 280rpx;
    height: 280rpx;
    background-color: transparent;
    border-radius: 50%;
    font-size: 14px;
    text-align: center;
    line-height: 280rpx;
    top: 266rpx;
    left: 50%;
    margin-left: -140rpx;
    background-size: 100% 100%;
    background-position: center;
    background-repeat: no-repeat;
    box-shadow: 0px 0px 20px rgba(0, 196, 225, 0.54);
}

.ORCode, .localUpload {
    position: absolute;
    width: 480rpx;
    height: 90rpx;
    left: 50%;
    margin-left: -240rpx;
    bottom: 226rpx;
    background-size: 100% 100%;
    background-position: center 100%;
    background-repeat: no-repeat;
    background-color: transparent;
    border: none;
    border-radius: 45rpx;
}

.localUpload {
    bottom: 176rpx;
}

.txt {
    position: absolute;
    width: 100%;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 11px;
    color: #009dff;
    letter-spacing: 0.13px;
    left: 0;
    bottom: 120rpx;
}

.circleA, .circleB, .circleC {
    position: absolute;
    box-sizing: border-box;
    /* border: 10rpx solid rgb(3,115,225); */
    border: none;
    width: 320rpx;
    height: 320rpx;
    background-color: transparent;
    top: 246rpx;
    left: 50%;
    margin-left: -160rpx;
    border-radius: 50%;
    opacity: 0;
    box-shadow: 0px 0px 20px rgba(0, 196, 225, 0.54);
    background-size: 100% 100%;
    background-position: center;
    background-repeat: no-repeat;
}

.errorToast {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.6);
}

.errorImg {
    position: absolute;
    width: 94rpx;
    height: 122rpx;
    top: 415rpx;
    left: 50%;
    margin-left: -47rpx;
    background-position: center;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.errorWord {
    position: absolute;
    width: 100%;
    height: 34rpx;
    top: 547rpx;
    left: 0;
    background-position: center;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #f98026;
    letter-spacing: 0.14px;
    text-align: center;
}
